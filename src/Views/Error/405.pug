extends ../Shared/layout

block links
    style.
        .main {
            position: relative;
            box-sizing: border-box;
            height: 490px;
            margin: 26px auto 60px;
            border-radius: 4px;
            background-color: #fff;
        }
        .err_500 {
            padding-top: 110px;
        }
        .err_500 .bgi {
            width: 300px;
            height: 300px;
            margin-left: 120px;
            background: url(/assets/images/err-spirits.png) no-repeat 0 -690px;
        }
        .err_500 .content {
            position: absolute;
            left: 476px;
            top: 130px;
        }
        .main .content > h3 {
            font-size: 26px;
            color: #474747;
            margin-bottom: 20px;
        }
        .err_500 .content > h3 > span {
            font-size: 20px;
        }
        .main .content .res {
            line-height: 36px;
            color: #888;
        }
        .main .content p {
            margin-left: 70px;
        }
        .main .content .links {
            margin-top: 28px;
            margin-left: 68px;
        }
        .main .links > a {
            display: inline-block;
            width: 92px;
            height: 32px;
            line-height: 32px;
            text-align: center;
        }

        .main .links .btn-link {
            margin-right: 12px;
            color: #fff;
            background-color: #e62129;
            border-radius: 2px;
        }

        .main .links .link {
            text-decoration: underline;
            color: #1163E4;
        }
        .err_not500 .bgi {
            width: 780px;
            height: 400px;
            background: url(/assets/images/err-spirits.png) no-repeat 50px 10px;
        }
        .err_not500 .content {
            position: absolute;
            left: 452px;
